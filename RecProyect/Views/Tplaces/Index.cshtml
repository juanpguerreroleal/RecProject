
@{
    ViewData["Title"] = "Index";
}


<div class="row table-bordered text-center" style="padding: 10px;">
    <h2 class="col-lg-12">Top 10 de lugares turisticos que encajan con tu perfil.</h2>
    <div class="row">
        <div class="col-lg-4 col-md-4 col-sm-4"><h3>Nombre</h3></div>
        <div class="col-lg-8 col-md-8 col-sm-8"><h3>Descripción</h3></div>
    </div>
    <div class="row">
        <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
            <h4>Nombre Ejemplo</h4>
        </div>
        <div class="col-lg-8 col-md-8 col-sm-8 col-xs-12">
            <h4>Descripcion ejemplo</h4>

        </div>
    </div>
</div>
<div class="row table-bordered text-center">
    <aside class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
        <h4>Agregar un sitio visitado</h4>
        <input class="btn btn-block btn-sm btn-primary" value="Agregar" />
    </aside>
    <article class="col-lg-8 col-md-8 col-sm-8 col-xs-12 table-bordered">
        <h3>Sitios que ya he visitado</h3>
        <div class="row">
            <div class="col-lg-3 col-md-3 col-sm-12"><h4>Nombre visitado</h4></div>
            <div class="col-lg-5 col-md-5 col-sm-12"><h4>Descripcion visitado</h4></div>
            <div class="col-lg-4 col-md-4 col-sm-12 btn-group">
                <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                    <input class="btn btn-block btn-danger btn-sm" value="Eliminar" />
                </div>
                <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                    <input class="btn btn-block btn-primary btn-sm" value="Editar" />
                </div>
            </div>
        </div>
    </article>
</div>